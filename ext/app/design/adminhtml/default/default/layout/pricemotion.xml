<?xml version="1.0"?>
<layout>
    <adminhtml_catalog_product_edit>
        <reference name="product_tabs">
            <action method="addTab">
                <name>pricemotion_tab</name>
                <block>pricemotion/adminhtml_catalog_product_tab</block>
            </action>
            <action method="addTab">
                <name>pricemotion_pricerules</name>
                <block>pricemotion/adminhtml_catalog_product_pricerules</block>
            </action>
        </reference>
        <reference name="head">
            <action method="addCss">
                <stylesheet>pricemotion/pricemotion.css</stylesheet>
            </action>
        </reference>
    </adminhtml_catalog_product_edit>
    <pricemotion_adminhtml_action_rules>
        <reference name="head">
            <action method="addCss">
                <stylesheet>pricemotion/pricemotion.css</stylesheet>
            </action>
        </reference>
        <reference name="content">
            <block type="pricemotion/adminhtml_catalog_product_action_rules" name="pricemotion_pricerules" template="pricemotion/mass_price_rules.phtml"/>
        </reference>
    </pricemotion_adminhtml_action_rules>
</layout>
